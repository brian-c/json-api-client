{
  "name": "json-api-client",
  "version": "0.0.7",
  "main": "./json-api-client",
  "devDependencies": {
    "browserify": "^5.12.1",
    "coffeeify": "^0.7.0",
    "derequire": "^1.2.0",
    "node-static": "^0.7.6",
    "nodemon": "^1.2.1"
  },
  "scripts": {
    "build": "browserify --debug --entry ./src/json-api-client.coffee --extension .coffee --transform coffeeify --standalone JSONAPIClient | derequire > ./json-api-client.js",
    "build-demo": "browserify --debug --entry ./demo.coffee --extension .coffee --transform coffeeify > ./demo.js",
    "serve": "static --port 1502 --headers '{\"Cache-Control\": \"no-cache, must-revalidate\"}'",
    "start": "npm run watch & npm run serve",
    "watch": "nodemon --watch ./src --watch ./demo.coffee --ext coffee --exec \"npm run build ; npm run build-demo\""
  }
}
